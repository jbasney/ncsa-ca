<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gpt_package_metadata SYSTEM "globus_package.dtd">

<gpt_package_metadata Format_Version="0.02" Name="gsi_ncsa_ca_tools" >

  <Aging_Version Major="0" Minor="3" Age="0" />
  <Description>GSI NCSA CA certificates, signing policy, and request/retrieve scripts</Description>
  <Functional_Group >gsi_ncsa_ca</Functional_Group>
  <Version_Stability Release="beta" />

  <src_pkg >

    <Source_Dependencies Type="pgm_runtime" >
      <Dependency Name="globus_openssl" Package="pgm" ><Version><Simple_Version Major="0"></Simple_Version></Version></Dependency>
    </Source_Dependencies>

    <Version_Label>0.4.5</Version_Label>

    <With_Flavors build="no" />

    <Build_Instructions>

      <Build_Step>mkdir -p INSTALLDIR_GPTMACRO/bin/</Build_Step>
      <Build_Step>cp ncsa-cert-request INSTALLDIR_GPTMACRO/bin/ncsa-cert-request</Build_Step>
      <Build_Step>cp ncsa-cert-request.pl INSTALLDIR_GPTMACRO/bin/ncsa-cert-request.pl</Build_Step>
      <Build_Step>cp ncsa-cert-retrieve INSTALLDIR_GPTMACRO/bin/ncsa-cert-retrieve</Build_Step>
      <Build_Step>cp ncsa-cert-retrieve.pl INSTALLDIR_GPTMACRO/bin/ncsa-cert-retrieve.pl</Build_Step>

      <Build_Step>mkdir -p INSTALLDIR_GPTMACRO/share/gsi_ncsa_ca_tools/</Build_Step>
      <Build_Step>cp ncsa-ca.conf INSTALLDIR_GPTMACRO/share/gsi_ncsa_ca_tools/ncsa-ca.conf</Build_Step>

      <Build_Step>mkdir -p INSTALLDIR_GPTMACRO/licenses/</Build_Step>
      <Build_Step>cp LICENSE INSTALLDIR_GPTMACRO/licenses/gsi_ncsa_ca_tools.license</Build_Step>

    </Build_Instructions>

  </src_pkg >

</gpt_package_metadata>
