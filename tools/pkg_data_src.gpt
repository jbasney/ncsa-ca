<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gpt_package_metadata SYSTEM "package.dtd">

<gpt_package_metadata Format_Version="0.01" Name="gsi_ncsa_ca_tools" >

  <Aging_Version Age="0" Major="0" Minor="1" />
  <Description>GSI NCSA CA certificates, signing policy, and request/retrieve scripts</Description>
  <Functional_Group >gsi_ncsa_ca</Functional_Group>
  <Version_Stability Release="alpha" />

  <src_pkg >

    <Source_Setup_Dependency PkgType="pgm" >
      <Setup_Dependency Name="globus_core_setup" > <Version > <Simple_Version Major="0" /> </Version> </Setup_Dependency>
    </Source_Setup_Dependency>

    <Version_Label>0.1</Version_Label>

    <With_Flavors build="no" />

    <Build_Instructions>

      <Build_Step>mkdir -p INSTALLDIR_GPTMACRO/bin/</Build_Step>
      <Build_Step>cp ncsa-cert-request INSTALLDIR_GPTMACRO/bin/ncsa-cert-request</Build_Step>
      <Build_Step>cp ncsa-cert-retrieve INSTALLDIR_GPTMACRO/bin/ncsa-cert-retrieve</Build_Step>

      <Build_Step>mkdir -p INSTALLDIR_GPTMACRO/share/gsi_ncsa_ca_tools/</Build_Step>
      <Build_Step>cp ncsa-ca.conf INSTALLDIR_GPTMACRO/share/gsi_ncsa_ca_tools/ncsa-ca.conf</Build_Step>

    </Build_Instructions>

  </src_pkg >

</gpt_package_metadata>
